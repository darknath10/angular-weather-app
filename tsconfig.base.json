{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@farmapp/location": ["modules/location/public-api/src/index.ts"],
      "@farmapp/location/core": ["modules/location/core/src/index.ts"],
      "@farmapp/location/feat-search-locations": [
        "modules/location/presentation/feature-search-locations/src/index.ts"
      ],
      "@farmapp/location/gw-search-locations": [
        "modules/location/gateways/search-locations/src/index.ts"
      ],
      "@farmapp/location/presentation/providers": [
        "modules/location/presentation/providers/src/index.ts"
      ],
      "@farmapp/weather": ["modules/weather/public-api/src/index.ts"],
      "@farmapp/weather/core": ["modules/weather/core/src/index.ts"],
      "@farmapp/weather/feat-current": [
        "modules/weather/presentation/feat-current/src/index.ts"
      ],
      "@farmapp/weather/feat-forecast": [
        "modules/weather/presentation/feat-forecast/src/index.ts"
      ],
      "@farmapp/weather/gateways": ["modules/weather/gateways/src/index.ts"],
      "@farmapp/weather/providers": ["modules/weather/providers/src/index.ts"],
      "@farmapp/weather/ui": ["modules/weather/presentation/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
